{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for Express Node application in TS.",
  "author": "Igor SzymaÅ„ski",
  "repository": "github:igorszymanski/express-ts-boilerplate",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rimraf dist && ttsc",
    "start:dev": "ts-node-dev --type-check --compiler ttypescript src/main.ts",
    "start:live": "ts-node --type-check --compiler ttypescript src/main.ts",
    "start:debug": "node --inspect -r ./ts-node.js src/main.ts",
    "start": "node dist/main.js",
    "lint": "prettier --check \"./**/*.{js,ts,json}\"",
    "lint:fix": "prettier --write \"./**/*.{js,ts,json}\"",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "ts-node --compiler ttypescript jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "fp-ts": "^2.6.2",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^25.2.1",
    "@types/node": "^14.0.5",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.0.0",
    "@zerollup/ts-transform-paths": "^1.7.17",
    "husky": "^4.2.0",
    "jest": "^26.0.1",
    "lint-staged": ">=10",
    "prettier": "^2.0.0",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "8.10.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "ttypescript": "^1.5.10",
    "typescript": "3.9.3"
  },
  "lint-staged": {
    "*.{js,css,md,ts}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
